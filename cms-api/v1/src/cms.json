{
  "swagger": "3.0",
  "info": {
    "version": "v1",
    "description": "Reference for the Brightcove CMS API, used to access and manage your media library. To test API requests, you can use our [API Testing Tools](https://support.brightcove.com/developer-tools-and-concepts). For permissions needed for OAuth credentials, see [API Operations](https://support.brightcove.com/api-operations-client-credentials-requests).",
    "title": "Brightcove CMS API"
  },
  "servers": [
    {
      "url": "https://cms.api.brightcove.com/v1"
    }
  ],
  "components": {
    "schemas": {
      "video": {
        "name": {
          "type": "String"
        },
        "id": {
          "type": "String"
        },
        "account_id": {
          "type": "String"
        }
      }
    },
    "parameters": {
      "account_idParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "Video Cloud account id",
        "in": "path",
        "name": "account_id"
      },
      "video_idParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "A Video Cloud video id",
        "in": "path",
        "name": "video_id"
      },
      "reference_idParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "A Video Cloud video reference id",
        "in": "path",
        "name": "reference_id"
      },
      "playlist_idParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "A Video Cloud playlist id",
        "in": "path",
        "name": "playlist_id"
      },
      "channel_nameParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "A Video Cloud channel name for media sharing",
        "in": "path",
        "name": "channel_name"
      },
      "affiliate_account_idParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "A Video Cloud affiliate account id for media sharing",
        "in": "path",
        "name": "affiliate_account_id"
      },
      "master_account_idParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "A Video Cloud master account id for media sharing",
        "in": "path",
        "name": "master_account_id"
      },
      "asset_idParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "ID for a video asset",
        "in": "path",
        "name": "asset_id"
      },
      "folder_idParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "Video Cloud folder id",
        "in": "path",
        "name": "folder_id"
      },
      "subscription_idParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "CMS API notifications subscription id",
        "in": "path",
        "name": "subscription_id"
      },
      "limitParam": {
        "schema": {
          "default": 20,
          "minimum": 1,
          "type": "integer"
        },
        "required": false,
        "description": "Maximum number of items to return",
        "in": "query",
        "name": "limit"
      },
      "offsetParam": {
        "schema": {
          "type": "integer",
          "default": 0,
          "minimum": 0
        },
        "required": false,
        "description": "Number of items to skip",
        "in": "query",
        "name": "limit"
      },
      "qParam": {
        "schema": {
          "type": "string"
        },
        "required": false,
        "description": "Search string - see [Videos Search](https://support.brightcove.com/cmsplayback-api-videos-search) and [Playlist Search](https://support.brightcove.com/cms-api-playlists-search) for details",
        "in": "query",
        "name": "q"
      },
      "sortParam": {
        "schema": {
          "enum": [
            "name",
            "reference_id",
            "created_at",
            "published_at",
            "updated_at",
            "schedule_starts_at",
            "schedule_ends_at",
            "state",
            "plays_total",
            "plays_trailing_week"
          ],
          "default": "updated_at",
          "type": "string"
        },
        "required": false,
        "description": "Field to use to sort items",
        "in": "query",
        "name": "limit"
      }
    }
  }
}