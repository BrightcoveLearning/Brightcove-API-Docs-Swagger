{
  "swagger": "3.0",
  "info": {
    "version": "v1",
    "description": "Reference for the Brightcove CMS API, used to access and manage your media library. To test API requests, you can use our [API Testing Tools](https://support.brightcove.com/developer-tools-and-concepts). For permissions needed for OAuth credentials, see [API Operations](https://support.brightcove.com/api-operations-client-credentials-requests).",
    "title": "Brightcove CMS API"
  },
  "servers": [
    {
      "url": "https://cms.api.brightcove.com/v1"
    }
  ],
  "components": {
    "parameters": {
      "limitParam": {
        "schema": {
          "default": 20,
          "minimum": 1,
          "type": "integer"
        },
        "required": false,
        "description": "Maximum number of items to return",
        "in": "query",
        "name": "limit"
      },
      "offsetParam": {
        "schema": {
          "type": "integer",
          "default": 0,
          "minimum": 0
        },
        "required": false,
        "description": "Number of items to skip",
        "in": "query",
        "name": "limit"
      },
      "qParam": {
        "schema": {
          "type": "string",
        },
        "required": false,
        "description": "Search string - see [Videos Search](https://support.brightcove.com/cmsplayback-api-videos-search) for details",
        "in": "query",
        "name": "q"
      },
      "sortParam": {
        "schema": {
          "enum": [
            "name",
            "reference_id",
            "created_at",
            "published_at",
            "updated_at",
            "schedule_starts_at",
            "schedule_ends_at",
            "state",
            "plays_total",
            "plays_trailing_week"
          ],
          "default": "updated_at",
          "type": "string"
        },
        "required": false,
        "description": "Field to use to sort items",
        "in": "query",
        "name": "limit"
      }
    }
  }
}
